<%- include('partials/header') %>
<div class="container p-4">
    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h3>Write A New Entry</h3>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" placeholder="Entry A New Title" autofocus required>
                        </div>
                        <div class="form-group">
                            <textarea name="body" id="body" class="form-control" placeholder="Note Description" required></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Post Entry" class="btn btn-primary btn-block">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>